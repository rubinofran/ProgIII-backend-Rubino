{
  "env": "production",
  "program": "api",

  "server": {
    "url": "",
    "maxResultsLimit": 1000
  },

  "auth": {
    "token": {
      "issuer": "Api",
      "algorithm": "RS256",
      "appExpiresIn": "90d",
      "dashboardExpiresIn": "1d",
      "audience": ["app", "dashboard"]
    },
    "key": "api-local",
    "passwordTtl": 94670856000,
    "passwordResetTokenTtl": 15552000000,
    "verificationTokenTtl": 15552000000
  },

  "rateLimit": {
    "window": "1m",
    "requests": 1000
  },

  "mongo": {
    "db": "api",
    "url": "mongodb://localhost/api"
  },

  "logger": {
    "sentry": {
      "dsn": ""
    },
    "console": {
      "level": "debug",
      "timestamp": true,
      "handleExceptions": true,
      "humanReadableUnhandledException": true,
      "colorize": true
    }
  },

  "aws": {
    "accessKeyId": "",
    "secretAccessKey": "",
    "bucket": "api-local",
    "region": "us-east-1"
  }
}
