{
  "env": "development",
  "program": "api",

  "server": {
    "url": "http://localhost:4000",
    "maxResultsLimit": 1000
  },

  "auth": {
    "token": {
      "secret": "secret",
      "expiresIn": "1d"
    },
    "key": "api-local",
    "passwordTtl": 94670856000,
    "passwordResetTokenTtl": 15552000000,
    "verificationTokenTtl": 15552000000
  },

  "rateLimit": {
    "window": "1m",
    "requests": 1000
  },

  "mongo": {
    "db": "api",
    "url": "mongodb://localhost/api"
  },

  "logger": {
    "sentry": {
      "dsn": ""
    },
    "console": {
      "level": "debug",
      "timestamp": true,
      "handleExceptions": true,
      "humanReadableUnhandledException": true,
      "colorize": true
    }
  },

  "aws": {
    "accessKeyId": "",
    "secretAccessKey": "",
    "bucket": "api-local",
    "region": "us-east-1"
  }
}
